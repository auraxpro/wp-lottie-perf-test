# WordPress Lottie Performance Test - Custom .gitignore
# Based on WordPress.gitignore but customized for our project

# WordPress Core Files (ignore these)
/wp-admin/
/wp-includes/
/wp-*.php
/xmlrpc.php
/license.txt
/readme.html

# WordPress Configuration (ignore sensitive config)
wp-config.php

# WordPress Default Themes (ignore these)
/wp-content/themes/twenty*/
/wp-content/themes/index.php

# WordPress Default Plugins (ignore these)
/wp-content/plugins/hello.php
/wp-content/plugins/index.php

# WordPress Uploads (ignore user uploads)
/wp-content/uploads/

# WordPress Languages (ignore translations)
/wp-content/languages/

# Log files
*.log

# htaccess
/.htaccess

# OS Files
.DS_Store
Thumbs.db

# IDE Files
.vscode/
.idea/
*.swp
*.swo

# Node modules (if any)
node_modules/

# Backup files
backup-current/
*.backup

# Temporary files
*.tmp
*.temp

# BUT KEEP OUR CUSTOM THEME AND ASSETS
# Our custom Lottie performance test theme
!/wp-content/themes/lottie-perf-test/
!/wp-content/themes/lottie-perf-test/**
!/wp-content/themes/lottie-perf-test/assets/
!/wp-content/themes/lottie-perf-test/assets/**

# Keep our project files
!/README.md
!/wasmer.toml
!/index.php

# Keep our Lottie files specifically
!/wp-content/themes/lottie-perf-test/assets/lottie/
!/wp-content/themes/lottie-perf-test/assets/lottie/*.lottie

# Keep our JavaScript files
!/wp-content/themes/lottie-perf-test/assets/js/
!/wp-content/themes/lottie-perf-test/assets/js/*.js

# Keep our CSS files
!/wp-content/themes/lottie-perf-test/assets/css/
!/wp-content/themes/lottie-perf-test/assets/css/*.css

# Keep our PHP template files
!/wp-content/themes/lottie-perf-test/*.php
!/wp-content/themes/lottie-perf-test/functions.php
!/wp-content/themes/lottie-perf-test/style.css